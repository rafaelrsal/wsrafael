package repeticao;

import javax.swing.JOptionPane;

public class ExemploDo {

	public static void main(String[] args) {
		
		String nome = JOptionPane.showInputDialog("Digite o nome novamente: ").toUpperCase();
		float peso = Float.parseFloat(JOptionPane.showInputDialog("Peso: "));
		float altura = Float.parseFloat(JOptionPane.showInputDialog("Peso: "));
		float imc = peso / (altura * altura);
		
		System.out.printf("%s, seu IMC é: %.2f",nome,imc);

	}

}
